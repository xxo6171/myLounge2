<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bglounge2"
    tools:context="com.example.mylounge2.MainActivity">
    <TextView
        android:id="@+id/tv_pcName"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="30sp"
        android:gravity="center"
        android:text="예 약"
        android:textColor="#fff"
        android:layout_marginBottom="16dp"
        android:background="#66000000"
        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_date"
        android:hint="날짜 선택"
        android:textColorHint="#fff"
        android:textSize="20sp"
        android:textColor="#fff"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:drawableTop="@drawable/ic_calender"
        android:background="@drawable/round_border"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
       />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_startTime"
        android:hint="시 작 시 간"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="center"
        android:drawableTop="@drawable/ic_time"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:drawablePadding="16dp"
        android:background="@drawable/round_border"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_endTime"
        android:hint="종 료 시 간"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="center"
        android:drawableTop="@drawable/ic_time"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_border"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_cal"
        android:background="@drawable/round_border"
        android:text="예 약 하 기"
        android:textSize="25sp"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="16dp"/>





</LinearLayout>