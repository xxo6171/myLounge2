<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bglounge2"
    tools:context="com.example.mylounge2.RegisterActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:paddingTop="25dp"
        android:src="@drawable/ansanlgo"
        tools:ignore="MissingConstraints"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="회 원 가 입"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="35sp"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="※학번 9자리\n※이름 제한없음\n※연락처 -없이 입력"
        android:textColor="#fff"
        android:textSize="20sp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/round_border2"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:textColor="#fff"
                android:text="학번"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="90dp"
                android:inputType="number"
                android:maxLength="9"
                android:maxLines="1"
                android:padding="10dp"
                android:backgroundTint = "#fff"
                android:textColor="#fff"
                android:textSize="20sp"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:textColor="#fff"
                android:text="이름"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="90dp"
                android:backgroundTint = "#fff"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="#fff"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:textColor="#fff"
                android:text="연락처"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_phNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="90dp"
                android:maxLength="11"
                android:maxLines="1"
                android:inputType="phone"
                android:padding="10dp"
                android:backgroundTint = "#fff"
                android:textColor="#fff"
                android:textSize="20sp" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_recheck"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_border"
            android:text="중 복 검 사"
            android:textStyle="bold"
            android:textColor="#fff"/>

    </LinearLayout>
    <Button
        android:id="@+id/btn_register"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@drawable/round_border"
        android:text="가입하기"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        />
</LinearLayout>